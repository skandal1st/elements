# =============================================================================
# Elements Platform - Environment Variables
# =============================================================================
# Скопируйте этот файл в .env и настройте значения
# cp .env.example .env
# =============================================================================

# -----------------------------------------------------------------------------
# Database
# -----------------------------------------------------------------------------
POSTGRES_USER=elements
POSTGRES_PASSWORD=elements
POSTGRES_DB=elements

# -----------------------------------------------------------------------------
# Authentication (ВАЖНО: измените в production!)
# -----------------------------------------------------------------------------
# Общий секрет для JWT токенов всех модулей
# Генерация: openssl rand -hex 32
JWT_SECRET=elements-super-secret-key-change-in-production

# -----------------------------------------------------------------------------
# Seed Admin (первый администратор)
# -----------------------------------------------------------------------------
SEED_ADMIN_ENABLED=true
SEED_ADMIN_EMAIL=admin@elements.local
SEED_ADMIN_PASSWORD=admin123

# -----------------------------------------------------------------------------
# Elements IT (SupporIT) Integration
# -----------------------------------------------------------------------------
SUPPORIT_API_URL=http://localhost:3001/api
SUPPORIT_TOKEN=

# -----------------------------------------------------------------------------
# Active Directory
# -----------------------------------------------------------------------------
AD_SERVER=
AD_USER=
AD_PASSWORD=
AD_BASE_DN=
AD_DOMAIN=
AD_USE_SSL=true

# -----------------------------------------------------------------------------
# Mailcow (Email)
# -----------------------------------------------------------------------------
MAILCOW_API_URL=
MAILCOW_API_KEY=

# -----------------------------------------------------------------------------
# 1C ZUP Integration
# -----------------------------------------------------------------------------
ZUP_API_URL=
ZUP_USERNAME=
ZUP_PASSWORD=

# -----------------------------------------------------------------------------
# MinIO (S3-compatible storage)
# -----------------------------------------------------------------------------
MINIO_ROOT_USER=elements
MINIO_ROOT_PASSWORD=elements123
MINIO_ENDPOINT=minio:9000

# -----------------------------------------------------------------------------
# RabbitMQ
# -----------------------------------------------------------------------------
RABBITMQ_USER=elements
RABBITMQ_PASSWORD=elements
